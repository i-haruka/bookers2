
<div class="container">  <!-- この行を追加 -->
  <div class="row">

    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>  </th>
            <th>Tiltle</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
              </td>
            <td><%= link_to book.title, book_path %></td>
            <td><%= book.body %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

