<div>
  <%= flash[:notice] %>
</div>


<div class="container">  <!-- この行を追加 -->
  <div class="row">

   <div class="col-md-3">
     <%= render 'users/userinfo', user: @user %>
     <%= render 'new', book: @book_new %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table">
     <tbody>
      <tr>
       <td><%= image_tag @book.user.get_profile_image(100,100) %>
        <br><%= link_to @book.user.name, user_path(@user) %>
       </td>
       <td><%= link_to @book.title, book_path %></td>
       <td><%= @book.body %></td>

       <% if @book.user == current_user %>
        <td><%= link_to 'Edit', edit_book_path, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', book_path(@book), class: "btn btn-secondary", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
       <% end %>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
</div>

